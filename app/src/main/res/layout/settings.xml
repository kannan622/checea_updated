<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"

        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="Settings"
                android:textColor="#666666"
                android:textSize="28sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/main"
            android:background="@color/grey1">

        </View>


        <TextView
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="General Settings"
            android:textColor="@color/grey_black"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/checea"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/general"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/checeacom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/about" />


            <TextView
                android:id="@+id/checeatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/checeacom"
                android:padding="8dp"
                android:text="Checea.com "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey_black"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/checea"
            android:background="@color/grey1">

        </View>

        <RelativeLayout
            android:id="@+id/rel_shareapp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/checea"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/share" />


            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/share_image"
                android:padding="8dp"
                android:text="Share with Friends "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey_black"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_shareapp"
            android:background="@color/grey1">

        </View>

        <RelativeLayout
            android:id="@+id/rel6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel_shareapp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/spacecraftImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/logout" />


        </RelativeLayout>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rel6"


            android:layout_centerHorizontal="true"


            android:padding="10dp"
            android:text="App Version : 1.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_black"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/version1"
            android:layout_width="45dp"
            android:layout_height="55dp"

            android:layout_below="@+id/version"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"

            android:text="App Version : 1.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible"

            />


    </RelativeLayout>


</ScrollView>
