<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@color/backgroundcolor"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="open_mediaplayer"
        card_view:cardCornerRadius="4dp"

        card_view:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/title_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"


                android:paddingRight="15dp"
                android:text="Meeting"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_"


                android:layout_marginTop="15dp"


                android:drawableLeft="@drawable/cal"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-condensed"


                android:text="23-01-2019"
                android:textColor="@color/grey"
                android:textSize="14sp"


                />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"

                android:layout_marginTop="15dp"

                android:drawableLeft="@drawable/pinpoint"

                android:drawablePadding="5dp"

                android:fontFamily="sans-serif-condensed"


                android:text="Ambattur OT, Chennai"
                android:textColor="@color/grey"
                android:textSize="14sp"


                />

            <TextView
                android:id="@+id/chairman_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"

                android:layout_marginTop="10dp"



                android:fontFamily="sans-serif-condensed"


                android:text="Chairman Name : "
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chairman_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/chairman_name"



                android:fontFamily="sans-serif-condensed"


                android:text="Srinivasan"
                android:textColor="@color/grey"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/chairman_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chairman_name_value"

                android:layout_marginTop="10dp"



                android:fontFamily="sans-serif-condensed"


                android:text="Chairman Mobile no : "
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chairman_mobileno_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chairman_name_value"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/chairman_mobile"



                android:fontFamily="sans-serif-condensed"


                android:text="9090909090"
                android:textColor="@color/grey"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/cochairman_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chairman_mobileno_value"

                android:layout_marginTop="10dp"



                android:fontFamily="sans-serif-condensed"

                android:text="Co-Chairman Name : "
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cochairman_mobileno_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chairman_mobileno_value"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cochairman_name"



                android:fontFamily="sans-serif-condensed"


                android:text="cochairman"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


